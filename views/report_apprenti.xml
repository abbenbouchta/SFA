                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th class="text-right">Diplom</th>
                    </tr>
               </thead>
               <tbody class="sale_tbody">
                   <tr>
                        <td>
                           <span t-field="o.name"/>
                        </td>
                        <td class="text-right">
                          <span t-field="o.first_name"/>
                        </td>
                        <td class="text-right">
                            <span t-field="o.diplom"/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <p t-field="o.cin" />
            
            <div class="oe_structure"/>
        </div>
    </t>
</template>

